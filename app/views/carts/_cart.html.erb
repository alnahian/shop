<div class="span 3">Your Cart

<table>
	<%= render(cart.line_items) %>
	
		<tr class="total_line">
			<td colspan="2">Total</td>
			<td class="total_cell"><%= cart.total_price %></td>
		</tr>
</table>

<%= button_to 'Empty cart', cart, :method => :delete, :confirm => 'Are you sure?',class: "btn btn-default btn-warning" %>
</div>
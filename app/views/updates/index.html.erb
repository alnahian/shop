<h1>Listing updates</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Unit</th>
    <th>Unit price</th>
    <th>Effective date</th>
    <th>Purchase date</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @updates.each do |update| %>
  <tr>
    <td><%= update.product_id %></td>
    <td><%= update.unit %></td>
    <td><%= update.unit_price %></td>
    <td><%= update.effective_date %></td>
    <td><%= update.purchase_date %></td>
    <td><%= update.description %></td>
    <td><%= link_to 'Show', update %></td>
    <td><%= link_to 'Edit', edit_update_path(update) %></td>
    <td><%= link_to 'Destroy', update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

